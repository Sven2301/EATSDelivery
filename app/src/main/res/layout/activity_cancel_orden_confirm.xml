<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelOrdenConfirm">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Detalles del Pedido:"
        android:textColor="@color/Button"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detalles_pedido_cancel"
        android:layout_width="376dp"
        android:layout_height="454dp"
        android:layout_marginTop="20dp"
        android:text="Detalles...."
        android:gravity="center_horizontal"
        android:background="@drawable/squarebox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/confirmCancel_btn"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button"
        android:text="Cancelar Pedido"
        android:textAllCaps="false"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detalles_pedido_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>