<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProductEncargado">

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="402dp"
        android:layout_height="725dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/squarebox" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="108dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="34dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnDelPE"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button"
        android:text="Eliminar el producto"
        android:textAllCaps="false"
        android:textColor="#FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCantPE" />

    <Button
        android:id="@+id/btnConfPE"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Modificar el producto"
        android:textAllCaps="false"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelPE"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/txtCantPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/box"
        android:ems="10"

        android:gravity="center"
        android:hint="Escribe la cantidad"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ltxtDescriptionPE"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/txtCostPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:hint="Precio del producto"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePE"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/txtNombrePE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre del producto"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="100dp" />

    <TextView
        android:id="@+id/ltxtDescriptionPE"
        android:layout_width="253dp"
        android:layout_height="121dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/squarebox"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCostPE" />

</androidx.constraintlayout.widget.ConstraintLayout>